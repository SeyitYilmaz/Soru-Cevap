@model Soru_Cevap.Models.Uye
@{
    ViewBag.Title = "UyeDetay";
}

<section class="container main-content">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="user-profile">
                    <div class="col-md-12">
                        <div class="page-content">
                            <h2>@Model.KullaniciAd Hakkında</h2>
                            <div class="ul_list ul_list-icon-ok about-user">
                                <ul>
                                    <li><i class="icon-edit"></i>Kullanıcı Ad <span>@Model.KullaniciAd</span></li>
                                    <li><i class="icon-map-marker"></i>Ad : <span>@Model.Ad</span></li>
                                    <li><i class="icon-globe"></i>Soyad :  <span>@Model.Soyad</span></li>
                                </ul>
                            </div>
                            <div class="clearfix"></div>


                        </div><!-- End page-content -->
                    </div><!-- End col-md-12 -->
                    <div class="col-md-12">
                        <div class="page-content page-content-user-profile">
                            <div class="user-profile-widget">
                                <h2>Kullanıcı İstatistikleri</h2>
                                <div class="ul_list ul_list-icon-ok">
                                    <ul>
                                        <li><i class="icon-question-sign"></i><a href="#">Sorular<span> ( <span>@Model.Soru.Count</span> ) </span></a></li>
                                        <li><i class="icon-comment"></i><a href="#">Answers<span> ( <span>@Model.Cevap.Count</span> ) </span></a></li>
                                    </ul>
                                </div>
                            </div><!-- End user-profile-widget -->
                        </div><!-- End page-content -->
                    </div><!-- End col-md-12 -->

                    @foreach (var soru in Model.Soru)
                    {
                        <div class="widget">
                            <h3 class="widget_title">@soru.Uye.KullaniciAd Son Soruları</h3>
                            <ul class="related-posts">
                                <li class="related-item">
                                    <h3><a href="~/Home/SoruDetay/@soru.SoruID">@soru.Baslik</a></h3>

                                </li>
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

